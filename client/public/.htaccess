# Desktop browser cache bypass
<IfModule mod_headers.c>
    # Set no-cache headers for desktop user agents
    SetEnvIf User-Agent "!.*(Mobile|Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini).*" desktop_browser
    
    # For desktop browsers, set aggressive no-cache headers
    Header always set Cache-Control "no-cache, no-store, must-revalidate, private" env=desktop_browser
    Header always set Pragma "no-cache" env=desktop_browser
    Header always set Expires "0" env=desktop_browser
</IfModule>

# Disable ETags for all files
FileETag None

# Set no-cache for HTML files
<FilesMatch "\.(html|htm)$">
    Header always set Cache-Control "no-cache, no-store, must-revalidate"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
</FilesMatch>